<Window x:Class="LogWindow.LogHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogWindow"
        mc:Ignorable="d"
        Title="LogHistory" Height="450" Width="800" FontFamily="Comic Sans MS">
    <Grid>
        <DataGrid x:Name="logHistory" HorizontalAlignment="Left" Height="394" VerticalAlignment="Top" Width="420" Margin="0,15,0,0" AutoGenerateColumns="True"/>
        <ComboBox x:Name="filter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="236" Margin="483,66,0,0" Height="24" SelectionChanged="filter_SelectionChanged">
            <TextBlock>Логин</TextBlock>
            <TextBlock>Дата</TextBlock>
            </ComboBox>
            <ComboBox x:Name="allLogins" HorizontalAlignment="Left" VerticalAlignment="Top" Width="236" Margin="483,140,0,0" Height="24" SelectionChanged="allLogins_SelectionChanged"/>
            <DatePicker x:Name="dateFilter" HorizontalAlignment="Left" Margin="483,223,0,0" VerticalAlignment="Top" Width="236" SelectedDateChanged="dateFilter_SelectedDateChanged"/>

    </Grid>
</Window>
